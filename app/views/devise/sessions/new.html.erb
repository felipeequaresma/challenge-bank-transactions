<div class="card col-md-6 offset-md-3">
  <div class="card-body my-5">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="m-auto">
        <div class="mb-3 row">
          <div class="col-md-6 offset-md-3">
            <%= f.label :cpf, class: "form-label" %>
            <%= f.text_field :cpf, autofocus: true, class: "form-control", autocomplete: "off", required: true %>
          </div>
        </div>

        <div class="mb-3 row">
          <div class="col-md-6 offset-md-3">
            <%= f.label :senha %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> minimo de caracteres)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", autocomplete: "off", required: true %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.submit "Entrar", class: "col-md-6 offset-md-3 btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
