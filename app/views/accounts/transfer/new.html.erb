<div class="card col-md-6 offset-md-3">
  <div class="card-body my-5">
    <%= form_with model: @account, url: accounts_update_transfer_path, method: :put do |f| %>
      <div class="m-auto">
        <div class="mb-3 row">
          <div class="col-md-6 offset-md-3">
            <%= f.label :valor, class: "form-label" %>
            <%= f.text_field :balance, autofocus: true, class: "form-control", autocomplete: "off", required: true %>
          </div>
        </div>

        <div class="mb-3 row">
          <div class="col-md-6 offset-md-3">
            <%= f.label :cpf %>
            
            <%= f.text_field :cpf, autocomplete: "new-password", class: "form-control", autocomplete: "off", required: true %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.submit "confirmar", class: "col-md-6 offset-md-3 btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

