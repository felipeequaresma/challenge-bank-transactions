<div class="card col-md-6 offset-md-3">
  <div class="card-body my-5">
    <% flash.each do |name, message| %>
      <%= content_tag :div, message, class: "alert alert-#{name} col-md-6 offset-md-3" %>
    <% end %>
   <%= form_with model: @account, url: accounts_update_deposit_path, method: :put do |f| %>
      <div class="m-auto">
        <div class="mb-3 row">
          <div class="col-md-6 offset-md-3">
            <%= f.label :valor, class: "form-label" %>
            <%= f.text_field :balance, autofocus: true, class: "form-control", autocomplete: "off", required: true %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.submit "Confirmar", class: "col-md-6 offset-md-3 btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
